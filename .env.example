# FizzTask Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/fizztask
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/fizztask
# For Production: Use MongoDB Atlas or your preferred cloud MongoDB service

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRY=1d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_make_it_different
REFRESH_TOKEN_EXPIRY=7d

# OpenAI Configuration (for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@fizztask.com

# Google OAuth Configuration (for Gmail integration)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://fizztask.com/auth/gmail/callback

# Application URLs
# Development
APP_URL=http://localhost:3000
CLIENT_URL=http://localhost:3000

# Production - Update these when deploying to fizztask.com
# APP_URL=https://fizztask.com
# CLIENT_URL=https://fizztask.com
# GOOGLE_CALLBACK_URL=https://fizztask.com/auth/gmail/callback

# Debug Configuration
DEBUG=false
