# FizzTask Frontend Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# API Configuration
# Development (default) - Backend running on port 8000
REACT_APP_API_URL=http://localhost:8000

# Production - Uncomment and use when deploying to fizztask.com
# Option 1: API served from subdomain
# REACT_APP_API_URL=https://api.fizztask.com
# Option 2: API served from same domain (recommended)
# REACT_APP_API_URL=https://fizztask.com

# Application Configuration
REACT_APP_APP_NAME=FizzTask
REACT_APP_APP_VERSION=1.0.0
REACT_APP_DOMAIN=fizztask.com

# Environment Configuration
REACT_APP_ENVIRONMENT=development
# For production deployment, set to: production

# Optional: Enable debug mode in development
REACT_APP_DEBUG=false

# Google Analytics (optional)
# REACT_APP_GA_TRACKING_ID=your_google_analytics_id

# OAuth Configuration (for frontend redirects)
# Development
REACT_APP_OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback
# Production - Uncomment for fizztask.com deployment
# REACT_APP_OAUTH_REDIRECT_URI=https://fizztask.com/auth/callback

# Email Configuration (for contact forms, etc.)
REACT_APP_CONTACT_EMAIL=support@fizztask.com

# Feature Flags (optional)
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_NOTIFICATIONS=true
