{
  "name": "taskmaster-backend",
  "version": "1.0.0",
  "description": "TaskMaster API backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "models/**/*.js",
      "routes/**/*.js",
      "utils/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  },
  "dependencies": {
    "async": "^3.2.4",
    "axios": "^1.3.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "googleapis": "^112.0.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.8",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "jest": "^29.5.0",
    "mongodb-memory-server": "^8.12.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  }
}
