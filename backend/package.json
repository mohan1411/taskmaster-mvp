{
  "name": "fizztask-backend",
  "version": "1.0.0",
  "description": "FizzTask API backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "check:test-code": "node scripts/check-test-code.js",
    "premerge:main": "npm run check:test-code",
    "build:prod": "npm run check:test-code && echo 'Production build ready'"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "models/**/*.js",
      "routes/**/*.js",
      "utils/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  },
  "dependencies": {
    "async": "^3.2.4",
    "axios": "^1.3.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "googleapis": "^112.0.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.4-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.8",
    "openai": "^4.0.0",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.6.0",
    "xlsx": "^0.18.5",
    "natural": "^6.10.0",
    "compromise": "^14.10.0",
    "file-type": "^16.5.4",
    "mime-types": "^2.1.35",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "jest": "^29.5.0",
    "mongodb-memory-server": "^8.12.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  }
}
